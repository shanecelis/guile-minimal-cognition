#!/bin/bash 
# runtests

usage() {
   echo "usage: runtests <X.test.scm ...>" >&2;
}

prefix=""
while getopts d opt; do
	case $opt in
	    d) prefix="gdb --args";;
	    *) echo "error: invalid option given." >&2; usage;;
	esac
done
shift $[ OPTIND - 1 ]

DYLD_LIBRARY_PATH=@abs_top_srcdir@/src:@abs_top_builddir@/src/minimal-cognition/.libs: $prefix @GUILE@ -L @abs_top_builddir@/src -L @abs_top_srcdir@/support/scheme -L @abs_top_srcdir@/.. -L @abs_top_srcdir@/../emacsy/src -l @abs_top_srcdir@/../emacsy/src/line-pragma.scm "$@"
